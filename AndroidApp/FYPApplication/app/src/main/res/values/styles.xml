<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input_box" >

        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/bg_input_box</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="heading_text_view" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">36dp</item>
        <item name="android:background">@color/light_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">Sample Heading</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
    </style>





    <!-- Spinner -->
    <style name="spItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="spDropDownItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:layout_margin">5dp</item>
    </style>


</resources>